{
  "name": "rnd-ts-node",
  "version": "0.0.0",
  "description": "Clean Typescript + Node.js template",
  "homepage": "https://github.com/oleksii-honchar/rnd-ts-node/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/oleksii-honchar/rnd-ts-node/issues"
  },
  "repository": "https://github.com/oleksii-honchar/rnd-ts-node",
  "license": "MIT",
  "author": "Oleksii Honchar <tuiteraz@gmail.com>",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "pnpm clean:dist && pnpm ts:build",
    "ci": "pnpm code:check && pnpm test && pnpm ts:build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "code:check": "pnpm lint && pnpm prettier:check && pnpm ts:check",
    "code:fix": "pnpm lint:fix && pnpm prettier:write",
    "debug": "pnpm run dotenvx -- nodemon --inspect src/index.ts | pino-pretty -c",
    "debug:json-logs": "make logs-restart && pnpm run dotenvx -- nodemon --inspect src/index.ts > ./logs/fastify.log 2>&1",
    "dev": "pnpm run dotenvx -- nodemon src/index.ts | pino-pretty -c",
    "dev:json-logs": "make logs-restart && pnpm run dotenvx -- nodemon src/index.ts > ./logs/fastify.log 2>&1",
    "dotenvx": "dotenvx run --env-file .env",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint --config ./eslint.config.js --cache . --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "prettier:check": "prettier --check \"{src,test}/**/*.{ts,js,json,md}\"",
    "prettier:write": "prettier --write \"{src,test}/**/*.{ts,js,json,md}\"",
    "sort-package-json": "npx sort-package-json",
    "start": "pnpm run dotenvx -- node --inspect -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "start:debug": "pnpm run dotenvx -- node --inspect-brk -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "test": "NODE_ENV=test jest --passWithNoTests --config ./jest.config.js",
    "ts:build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "ts:check": "pnpm ts:compile",
    "ts:compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "dependencies": {
    "config": "^3.3.12",
    "husky": "^9.1.7",
    "pino": "^9.5.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.24.5",
    "@eslint/js": "^9.15.0",
    "@faker-js/faker": "^9.2.0",
    "@tsconfig/node22": "22.0.0",
    "@tsconfig/recommended": "1.0.8",
    "@types/config": "^3.3.5",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "22.9.3",
    "eslint": "^9.15.0",
    "eslint-plugin-markdown": "^5.1.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "3.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": "^22"
  }
}